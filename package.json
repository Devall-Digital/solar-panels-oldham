{
  "name": "solar-panels-oldham",
  "version": "1.0.0",
  "description": "Solar Panels Oldham - High-performance lead generation website",
  "main": "assets/js/main.js",
  "scripts": {
    "build": "node assets/js/build.js",
    "build:css": "node assets/js/build.js css",
    "build:js": "node assets/js/build.js js",
    "build:images": "node assets/js/build.js images",
    "build:html": "node assets/js/build.js html",
    "build:server": "node assets/js/build.js server",
    "dev": "echo 'Development server not configured - use local server'",
    "test": "echo 'Tests not configured yet'",
    "lint": "echo 'Linting not configured yet'",
    "optimize": "npm run build && echo 'Optimization complete'",
    "clean": "rm -rf build/ && echo 'Cleaned build directory'",
    "analyze": "npm run build && echo 'Analysis complete - check build/reports/'",
    "deploy": "npm run build && echo 'Ready for deployment from build/dist/'"
  },
  "keywords": [
    "solar-panels",
    "oldham",
    "lead-generation",
    "seo",
    "performance",
    "accessibility"
  ],
  "author": "Solar Panels Oldham Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/solar-panels-oldham/website.git"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "prettier": "^2.8.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "IE 11"
  ],
  "config": {
    "build": {
      "sourceDir": "./assets",
      "outputDir": "./public",
      "buildDir": "./build/dist",
      "reportsDir": "./build/reports"
    },
    "performance": {
      "targetBundleSize": "40KB",
      "targetLoadTime": "3s",
      "targetCoreWebVitals": {
        "fcp": "1.5s",
        "lcp": "2.5s",
        "cls": "0.1",
        "fid": "100ms"
      }
    }
  },
  "files": [
    "assets/",
    "public/",
    "backend/",
    "docs/",
    "*.html",
    "*.php",
    "README.md"
  ],
  "directories": {
    "source": "assets/",
    "output": "public/",
    "build": "build/",
    "docs": "docs/"
  }
}